<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textDirection="rtl"
    android:background="@drawable/client"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context="com.bassiouny.naqalati.activities.OptionActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="نوع السيارة المراد البحث عنها"
            android:textColor="@color/black"
            android:id="@+id/text"
            android:layout_margin="10dp"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/sp_car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:entries="@array/car_type_value"
            android:gravity="center"
            android:orientation="vertical"></Spinner>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="اطلب الان"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/border_button"
        android:id="@+id/btn_request_now" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="طلبات خاصة وشركات"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/border_button"
        android:id="@+id/btn_special_request" />
</LinearLayout>
